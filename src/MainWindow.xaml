<Window x:Class="QuickSlide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Slide" Height="350" Width="525"
        Icon="Double-J-Design-Super-Mono-3d-Slideshow.ico">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#555555" Offset="0.0" />
            <GradientStop Color="#111111" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Image x:Name="ImageDisplay" />
        <ProgressBar x:Name="ProgressBar" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="3" Minimum="0" Maximum="1" 
                     Foreground="#007acc" />
    </Grid>
</Window>
